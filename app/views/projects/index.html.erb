<h2>My Portfolio</h2>
<ul>
<% @projects.each do |project| %>
  <li class="project" id="<%= dom_id(project) %>">
    <h3><%= project.title %></h3>
    <p><%= project.technologies_used %></p>
    <div class="nav">
      <%= link_to 'Show', project %>
      <%= link_to 'Edit', edit_project_path(project) %>
      <%= link_to 'Destroy', project, method: :delete, data: { conform: 'Are you sure?' }, remote: true %>
    </div>
  </li>
  <% end %>
</ul>
<br />
<%= link_to 'New Project', new_project_path, remote: true, id: :new_link %>
