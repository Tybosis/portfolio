<%= render 'projects/header' %>
<h2>My Portfolio</h2>
<ul id="project_index" style="list-style: none;">
<% @projects.each do |project| %>
  <li class="project" id="<%= dom_id(project) %>">
    <h3><%= project.title %></h3>
    <p><%= project.technologies_used %></p>
    <div class="nav">
      <%= link_to 'Show', project, remote: true %>
      <%= link_to 'Edit', edit_project_path(project), remote: true %>
      <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
    </div>
  </li>
  <% end %>
</ul>
<br />
<%= link_to 'New Project', new_project_path, remote: true, id: :new_link %>
