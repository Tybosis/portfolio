    <% @articles.each do |article| %>
      <div class="row">
        <div class="large-12 columns" role="content">
          <div class="small-10 small-centered columns">
            <div class="panel">
              <h2><%= article.title %></h2>
              <hr/>
              <p><%= article.content %></p>
              <ul class="inline-list">
                <li><%= link_to 'Continue reading...', article %></li>
                <li><%= link_to 'Edit', edit_article_path(article) if policy(article).update? %></li>
                <li><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } if policy(article).destroy? %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>

