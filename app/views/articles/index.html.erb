<%= render 'articles/header' %>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) if policy(article).update? %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } if policy(article).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if policy(Article.new).create? %>
  <%= link_to 'New Article', new_article_path %>
<% end %>
